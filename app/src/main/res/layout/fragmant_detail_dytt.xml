<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.DyttFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/detail_appbar"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/detail_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:id="@+id/detail_backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:fitsSystemWindows="true"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="8dp"
                android:paddingTop="64dp"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                tools:src="@drawable/ic_game_screenshuct">

                <com.xxz.magnet.ui.widgets.ShadowLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:sl_cornerRadius="6dp"
                    app:sl_shadowColor="#AA000000">

                    <ImageView
                        android:id="@+id/card"
                        android:layout_width="108dp"
                        android:layout_height="144dp"
                        android:elevation="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_game_screenshuct" />

                </com.xxz.magnet.ui.widgets.ShadowLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/detail_movie_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:lines="1"
                        android:text="但丁密码"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="但丁密码" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.xxz.magnet.ui.widgets.SimpleRatingBar
                            android:id="@+id/detail_movie_rate_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srb_borderColor="@color/colorYellow"
                            app:srb_fillColor="@color/colorYellow"
                            app:srb_numberOfStars="5"
                            app:srb_rating="3.4"
                            app:srb_starCornerRadius="2"
                            app:srb_starSize="12dp"
                            app:srb_stepSize="0.1" />

                        <TextView
                            android:id="@+id/detail_movie_rate_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:lines="1"
                            android:text="3.4"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            tools:text="3.4" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/detail_movie_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="喜剧 动作 科幻"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        tools:text="喜剧 动作 科幻" />

                    <TextView
                        android:id="@+id/detail_movie_region"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="美国"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        tools:text="美国" />

                    <TextView
                        android:id="@+id/detail_movie_release_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="2016-01-21"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        tools:text="2016-01-21" />

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>